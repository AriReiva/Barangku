@using Barangku.State
@inject AuthState AuthState
@if (AuthState.IsAuthenticated())
{
    <div class="navbar navbar-dark bg-dark sticky-top shadow">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold text-white" href="/">
                <i class="bi bi-shop me-2"></i>
                Barangku
            </a>
        </div>
    </div>

    <div class="bg-dark d-flex flex-column" style="height: calc(100vh - 56px);">
        <div class="px-3 py-3 border-bottom border-secondary">
            <div class="text-white fw-semibold">
                <i class="bi bi-person-circle me-2"></i>
                @AuthState.CurrentUser?.Username
            </div>

            @if (!string.IsNullOrEmpty(AuthState.CurrentUser?.Email))
            {
                <div class="text-white-50 small ms-4">
                    @AuthState.CurrentUser?.Email
                </div>
            }
        </div>

        <nav class="flex-column flex-grow-1">
            <div class="nav-item px-3">
                <a class="nav-link text-white" href="/">
                    <i class="bi bi-house-door-fill me-2"></i> Home
                </a>
            </div>

            <div class="nav-item px-3">
                <a class="nav-link text-white" href="/produk">
                    <i class="bi bi-box-seam-fill me-2"></i> Produk
                </a>
            </div>

            <div class="nav-item px-3">
                <a class="nav-link text-white" href="/transaksi">
                    <i class="bi bi-receipt me-2"></i> Transaksi
                </a>
            </div>
        </nav>

        <div class="px-3 py-3 border-top border-secondary">
            <a href="/logout" class="btn btn-danger w-100">
                <i class="bi bi-box-arrow-right me-1"></i>
                Logout
            </a>
        </div>
    </div>
}
