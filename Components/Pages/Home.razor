@page "/"
@rendermode InteractiveServer

@using Barangku.State
@using Barangku.Model.ViewModel
@using Barangku.Model.DTO
@inject AuthState AuthState
@inject DashboardState DashboardState
@inject NavigationManager Navigation

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">
            <i class="bi bi-speedometer2 me-2"></i>Dashboard
        </h2>
        <small class="text-muted">@DateTime.Now.ToString("dddd, dd MMMM yyyy")</small>
    </div>

    @if (DashboardState.IsLoading)
    {
        <div class="text-center mt-5 py-5">
            <div class="spinner-border text-primary mb-3" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="text-muted fw-medium">Memuat data dashboard...</p>
        </div>
    }
    else
    {
        <!-- Statistik Hari Ini -->
        <div class="row g-4 mb-4">
            <div class="col-12">
                <h5 class="fw-semibold text-dark mb-3">
                    <i class="bi bi-calendar-check text-primary me-2"></i>Aktivitas Hari Ini
                </h5>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="card border-0 shadow-sm h-100 hover-lift">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="text-muted mb-1 small text-uppercase fw-medium">Transaksi Hari Ini</p>
                                <h2 class="fw-bold mb-0 text-primary">@DashboardState.Data.TotalTransaksiHariIni</h2>
                            </div>
                            <div class="bg-primary bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-receipt fs-3 text-primary"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="card border-0 shadow-sm h-100 hover-lift">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="text-muted mb-1 small text-uppercase fw-medium">Pendapatan Hari Ini</p>
                                <h2 class="fw-bold mb-0 text-success">
                                    Rp @DashboardState.Data.TotalPendapatanHariIni.ToString("N0")
                                </h2>
                            </div>
                            <div class="bg-success bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-currency-dollar fs-3 text-success"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="card border-0 shadow-sm h-100 hover-lift">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="text-muted mb-1 small text-uppercase fw-medium">Produk Terjual</p>
                                <h2 class="fw-bold mb-0 text-danger">
                                    @DashboardState.Data.TotalProdukTerjualHariIni
                                </h2>
                            </div>
                            <div class="bg-danger bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-box-seam fs-3 text-danger"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistik Inventory -->
        <div class="row g-4 mb-4">
            <div class="col-12">
                <h5 class="fw-semibold text-dark mb-3">
                    <i class="bi bi-boxes text-info me-2"></i>Inventory
                </h5>
            </div>

            <div class="col-lg-6 col-md-6">
                <div class="card border-0 shadow-sm h-100 hover-lift">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="text-muted mb-1 small text-uppercase fw-medium">Total Barang</p>
                                <h2 class="fw-bold mb-0 text-info">@DashboardState.Data.TotalBarang</h2>
                            </div>
                            <div class="bg-info bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-archive fs-3 text-info"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-6">
                <div class="card border-0 shadow-sm h-100 hover-lift">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="text-muted mb-1 small text-uppercase fw-medium">Stock Menipis</p>
                                <h2 class="fw-bold mb-0 text-warning">@DashboardState.Data.TotalBarangStokMenipis</h2>
                            </div>
                            <div class="bg-warning bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-exclamation-triangle fs-3 text-warning"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabel Transaksi Terakhir -->
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom py-3">
                        <h5 class="mb-0 fw-semibold">
                            <i class="bi bi-clock-history text-primary me-2"></i>Transaksi Terakhir
                        </h5>
                    </div>

                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="fw-semibold text-uppercase small px-4 py-3">#ID</th>
                                        <th class="fw-semibold text-uppercase small py-3">Tanggal</th>
                                        <th class="fw-semibold text-uppercase small py-3">Kasir</th>
                                        <th class="fw-semibold text-uppercase small text-end px-4 py-3">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (DashboardState.Data.TransaksiTerakhir.Any())
                                    {
                                        @foreach (var trx in DashboardState.Data.TransaksiTerakhir)
                                        {
                                            <tr>
                                                <td class="px-4 py-3">
                                                    <span class="badge bg-primary bg-opacity-10 text-primary fw-medium">@trx.Id</span>
                                                </td>
                                                <td class="py-3">
                                                    <i class="bi bi-calendar3 text-muted me-2"></i>
                                                    <span class="fw-medium">@trx.Tanggal.ToString("dd/MM/yyyy HH:mm")</span>
                                                </td>
                                                <td class="py-3">
                                                    <i class="bi bi-person-circle text-muted me-2"></i>
                                                    @trx.Kasir
                                                </td>
                                                <td class="text-end px-4 py-3">
                                                    <span class="fw-bold text-success">Rp @trx.Total.ToString("N0")</span>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center py-5">
                                                <div class="text-muted">
                                                    <i class="bi bi-inbox fs-1 d-block mb-2 opacity-50"></i>
                                                    <p class="mb-0 fw-medium">Belum ada transaksi hari ini</p>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .hover-lift {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }
    
    .hover-lift:hover {
        transform: translateY(-4px);
        box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.15) !important;
    }
</style>

@code {
    protected override async Task OnInitializedAsync()
    {
        if (!AuthState.IsAuthenticated())
        {
            Navigation.NavigateTo("/login", forceLoad: true);
            return;
        }
        DashboardState.OnChange += StateHasChanged;
        await DashboardState.LoadAsync();
    }

    public void Dispose()
    {
        DashboardState.OnChange -= StateHasChanged;
    }
}